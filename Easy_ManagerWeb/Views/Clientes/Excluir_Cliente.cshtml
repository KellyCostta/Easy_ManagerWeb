@model Easy_ManagerWeb.Models.Cliente

@{
    ViewData["Title"] = "Excluir Cliente";
}

<div class="card shadow-sm border-danger">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Atenção! Confirmação de Exclusão</h4>
    </div>
    <div class="card-body">
        <h5 class="text-danger mb-3">Tem certeza que deseja excluir o seguinte cliente?</h5>

        <dl class="row">
            <dt class="col-sm-3">ID:</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Nome:</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">E-mail:</dt>
            <dd class="col-sm-9">@Model.Email</dd>
        </dl>

        <form asp-action="Excluir_Cliente" method="post">

            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Gerenciamento_clientes" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-trash-fill"></i> Sim, Excluir Definitivamente
                </button>
            </div>
        </form>
    </div>
</div>