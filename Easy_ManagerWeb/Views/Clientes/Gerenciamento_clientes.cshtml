@model List<Easy_ManagerWeb.Models.Cliente>

@{
    ViewData["Title"] = "Gestão de Clientes";
}

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Novo_Cliente" class="btn btn-primary">
        <i class="bi bi-person-plus-fill"></i> Novo Cliente
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Telefone</th>
                    <th>Endereço</th>
                    <th>Data de Cadastro</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                            <td>@Html.DisplayFor(modelItem => item.Endereco)</td>
                            <td>@item.DataCadastro.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a class="btn btn-sm btn-info" asp-action="Editar" asp-route-id="@item.Id" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a class="btn btn-sm btn-danger" asp-action="Excluir" asp-route-id="@item.Id" title="Excluir">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">Nenhum cliente cadastrado.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
