@model Easy_ManagerWeb.Models.DadosUsuario
@{
    ViewData["Title"] = "Login - Easy Manager";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center" style="min-height:100vh">
        <div class="col-md-4">
            <div class="card shadow-lg p-4">
                <h1 class="text-center mb-4">
                    <span style="color:black;">EASY</span><span class="text-danger">MANAGER</span>
                </h1>

                @if (ViewBag.Erro != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Erro</div>
                }

                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label>Usuário</label>
                        <input asp-for="Usuario" class="form-control" placeholder="Digite seu usuário" required />
                    </div>
                    <div class="mb-3">
                        <label>Senha</label>
                        <input asp-for="Senha" type="password" class="form-control" placeholder="Digite sua senha" required />
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100">Entrar</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
