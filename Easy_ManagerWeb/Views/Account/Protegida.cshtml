@{
    ViewData["Title"] = "Início";
}

<head>
   
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<div class="container mt-4">

    <div class="text-center mb-4">
        <h5>Bem-vindo(a) @ViewBag.Usuario</h5>
        </div>

<div class="text-center mb-4">
    <img src="~/Imagens/LOGO_DBS_DELIVERY.jpg"
         alt="Logo da Empresa"
         style="max-width: 180px;">
</div>
</div>

<h2 class="mt-4 mb-3">Painel de Acesso Rápido</h2>

<style>
    
    .dashboard-btn {
        background: #111;
        color: white;
        border: 2px solid #c40000;
        border-radius: 10px;
        padding: 10px 12px;
        transition: 0.2s ease-in-out;
        font-weight: 500;
        font-size: 0.85rem;
        height: 90px; /* 🔥 altura fixa evita quebra */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .dashboard-btn:hover {
        background: #c40000;
        color: white;
        transform: scale(1.03);
        box-shadow: 0 0 8px rgba(196,0,0,0.5);
    }

    .dashboard-icon {
        font-size: 20px;
        margin-bottom: 4px;
        display: block;
    }

    .Logo-centro {
        max-width: 200px;
    }
</style>

<div class="container mt-4">
    <div class="row g-3">

    <!-- Orçamento sem compromisso -->
    <div class="col-md-3 col-sm-6 text-center">
        <a asp-controller="Orcamentos" asp-action="Orcamento_Avulso" class="dashboard-btn w-100 shadow-sm text-decoration-none">
            <i class="bi bi-calculator dashboard-icon"></i>
            Orçamento sem compromisso
        </a>
    </div>

    <!-- Visualizar lucros -->
    <div class="col-md-3 col-sm-6 text-center">
        <a asp-controller="Relatorios" asp-action="Lucros" class="dashboard-btn w-100 shadow-sm text-decoration-none">
            <i class="bi bi-graph-up-arrow dashboard-icon"></i>
            Visualizar Lucros
        </a>
    </div>

    <!-- Visualizar entregas -->
    <div class="col-md-3 col-sm-6 text-center">
        <a asp-controller="Entregas" asp-action="Gerenciamento_entregas" class="dashboard-btn w-100 shadow-sm text-decoration-none">
            <i class="bi bi-truck dashboard-icon"></i>
            Visualizar Entregas
        </a>
    </div>

    <!-- Adicionar Clientes -->
    <div class="col-md-3 col-sm-6 text-center">
        <a asp-controller="Clientes" asp-action="Novo_cliente" class="dashboard-btn w-100 shadow-sm text-decoration-none">
            <i class="bi bi-person-plus dashboard-icon"></i>
            Adicionar Clientes
        </a>
    </div>

    <!-- Relatório: Entregas Futuras -->
    <div class="col-md-3 col-sm-6 text-center">
        <a asp-controller="Entregas" asp-action="Relatorio" asp-route-periodo="futuras" class="dashboard-btn w-100 shadow-sm text-decoration-none">
            <i class="bi bi-calendar-check dashboard-icon"></i>
            Relatório: Entregas Futuras
        </a>
    </div>

    <!-- Relatório: Entregas Diárias -->
    <div class="col-md-3 col-sm-6 text-center">
        <a asp-controller="Entregas" asp-action="Relatorio" asp-route-periodo="diario" class="dashboard-btn w-100 shadow-sm text-decoration-none">
            <i class="bi bi-calendar-day dashboard-icon"></i>
            Relatório: Entregas Diárias
        </a>
    </div>

    <!-- Relatório: Lucros -->
    <div class="col-md-3 col-sm-6 text-center">
        <a asp-controller="Relatorios" asp-action="Lucros" class="dashboard-btn w-100 shadow-sm text-decoration-none">
            <i class="bi bi-cash-coin dashboard-icon"></i>
            Relatório: Lucros
        </a>
    </div>

    <!-- Adicionar Gasto -->
    <div class="col-md-3 col-sm-6 text-center">
        <a asp-controller="Gastos" asp-action="Novo_Gasto" class="dashboard-btn w-100 shadow-sm text-decoration-none">
            <i class="bi bi-wallet2 dashboard-icon"></i>
            Adicionar Gasto
        </a>
    </div>

</div>
</div>

<a asp-action="Logout">Sair</a>


