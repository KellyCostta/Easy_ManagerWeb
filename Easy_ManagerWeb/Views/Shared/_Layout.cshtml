<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Easy Manager Web</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Ocupa 100% da altura da viewport */
        .sidebar {
            min-height: 100vh;
            position: sticky; /* Mantém o menu lateral fixo ao rolar a página */
            top: 0;
            padding-top: 20px;
        }

        /* Padding superior para o conteúdo principal */
        main {
            padding-top: 20px;
        }

        /* Ajuste para os links do menu lateral */
        .list-group-item-light-custom {
            color: #212529; /* Cor do texto dark */
            background-color: #f8f9fa; /* Cor de fundo clara */
            border-color: rgba(0,0,0,.125);
        }

            .list-group-item-light-custom:hover {
                background-color: #e2e6ea; /* Cor mais clara */
            }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row">

            <div class="col-md-3 col-lg-2 bg-white text-dark sidebar border-end shadow-sm">

                <h4 class="text-center py-3 mb-4 border-bottom">
                    Easy Manager Web
                </h4>

                <partial name="_MenuLateral" />

                <div class="text-center small mt-auto pt-3 border-top position-absolute bottom-0 start-0 w-100 pb-3 bg-white">
                    @{
                        var usuarioLogado = Context.Session.GetString("usuario_logado") ?? "Visitante";
                    }
                    <i class="bi bi-person-circle"></i> @usuarioLogado
                </div>
            </div>
            <div class="col-md-9 col-lg-10 ms-sm-auto px-md-4">
                <header class="navbar navbar-light bg-white border-bottom shadow-sm">
                    <span class="navbar-brand mb-0 h1">@ViewData["Title"]</span>
                </header>

                <main role="main" class="pb-3">
                    @RenderBody()
                </main>

                <footer class="border-top footer text-muted">
                    <div class="container-fluid">
                        &copy; 2025 - Easy Manager Web - TCC
                    </div>
                </footer>

            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>