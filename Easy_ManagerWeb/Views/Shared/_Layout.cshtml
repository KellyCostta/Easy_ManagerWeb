<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Easy Manager Web</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* MOBILE (até 767px) */
        @@media (max-width: 767.98px) {
            /* Offcanvas no mobile */
            .offcanvas {
                z-index: 1050;
            }
            /* Caso você ainda use toggleClass("open") */
            .sidebar.open {
                z-index: 1051 !important;
            }
        }

        /* DESKTOP (a partir de 768px) */
        @@media (min-width: 768px) {
            /* Faz o offcanvas virar sidebar fixa no desktop */
            .offcanvas-md-none {
                visibility: visible !important;
                border-right: 1px solid rgba(0,0,0,.125);
                transform: none !important;
                position: sticky !important;
                top: 0;
                height: 100vh !important;
                padding: 0 !important;
            }
        }

        /* Sidebar layout geral */
        .sidebar {
            min-height: 100vh;
            position: sticky;
            top: 0;
            padding-top: 20px;
        }

        /* Conteúdo principal */
        main {
            padding-top: 20px;
        }

        /* Links do menu */
        .list-group-item-light-custom {
            color: #212529;
            background-color: #f8f9fa;
            border-color: rgba(0,0,0,.125);
        }

            .list-group-item-light-custom:hover {
                background-color: #e2e6ea;
            }

        /* Rodapé do usuário logado fixo no fundo da sidebar em desktop */
        .sidebar .bottom-0 {
            position: absolute !important;
        }
    </style>

</head>

<body>
    <button class="btn btn-outline-secondary d-md-none mb-2"
            type="button"
            data-bs-toggle="offcanvas"
            data-bs-target="#sidebar"
            aria-controls="sidebar">
        <i class="bi bi-list"></i> Menu
    </button>


    <div class="container-fluid">
        <div class="row">

            <div class="col-12 col-md-3 col-lg-2 bg-white text-dark sidebar border-end shadow-sm
                        offcanvas offcanvas-start offcanvas-md-none"
                 tabindex="-1"
                 id="sidebar"
                 aria-labelledby="sidebarLabel">

                <div class="offcanvas-header d-md-none">
                    <h5 class="offcanvas-title" id="sidebarLabel">Menu</h5>
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>

                <h4 class="text-center py-3 mb-4 border-bottom d-none d-md-block">
                    Easy Manager Web
                </h4>

                <div class="offcanvas-body p-0 p-md-0">
                    <partial name="_MenuLateral" />
                </div>


                <div class="text-center small mt-auto pt-3 border-top position-absolute bottom-0 start-0 w-100 pb-3 bg-white">
                    @{
                        var usuarioLogado = Context.Session.GetString("usuario_logado") ?? "Visitante";
                    }
                    <i class="bi bi-person-circle"></i> @usuarioLogado
                </div>
            </div>

            <div class="col-12 col-md-9 col-lg-10 ms-sm-auto px-md-4 content-area">

                <header class="navbar navbar-light bg-white border-bottom shadow-sm">
                    <span class="navbar-brand mb-0 h1">@ViewData["Title"]</span>
                </header>

                <main role="main" class="pb-3">
                    @RenderBody()
                </main>

                <footer class="border-top footer text-muted">
                    <div class="container-fluid">
                        &copy; 2025 - Easy Manager Web - TCC
                    </div>
                </footer>

            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>