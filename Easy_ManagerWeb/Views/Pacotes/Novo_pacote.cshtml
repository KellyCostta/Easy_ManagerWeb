@model Easy_ManagerWeb.Models.Pacote

@{
    ViewData["Title"] = "Novo Pacote";
}

<h2 class="mb-4 text-center">Cadastrar Novo Pacote</h2>

<div class="card p-4 shadow-sm mx-auto" style="max-width: 500px;">
    <form asp-action="Novo_Pacote" method="post">
        <div class="form-group mb-3">
            <label asp-for="Tamanho" class="form-label">Tamanho</label>
            <select asp-for="Tamanho" class="form-control">
                <option value="">Selecione...</option>
                <option value="Pequeno">Pequeno</option>
                <option value="Médio">Médio</option>
                <option value="Grande">Grande</option>
            </select>
            <span asp-validation-for="Tamanho" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Peso" class="form-label">Peso</label>
            <input asp-for="Peso" class="form-control" placeholder="Ex: 2kg" />
            <span asp-validation-for="Peso" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Descricao" class="form-label">Descrição</label>
            <input asp-for="Descricao" class="form-control" placeholder="Ex: Caixa com roupas" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success px-4">Salvar</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
