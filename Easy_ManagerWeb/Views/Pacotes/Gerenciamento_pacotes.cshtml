@model IEnumerable<Easy_ManagerWeb.Models.Pacote>

@{
    ViewData["Title"] = "Gestão de Pacotes";
}

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Novo_pacote" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Novo Pacote
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Descrição</th>
                    <th>Tamanho</th>
                    <th>Peso</th>
                    <th>Data de Inserção</th>
                    <th>Clientes Vinculados</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Descricao</td>
                            <td>@item.Tamanho</td>
                            <td>@item.Peso</td>
                            <td>@item.DataCadastro.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (item.Entregas != null && item.Entregas.Any())
                                {
                                    <ul>
                                        @foreach (var entrega in item.Entregas)
                                        {
                                            <li>@entrega.Cliente?.Nome</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">Nenhum cliente vinculado</span>
                                }
                            </td>
                            <td>
                                @if (item.Entregas == null || !item.Entregas.Any())
                                {
                                    <a asp-controller="Entregas" asp-action="Nova_entrega" asp-route-pacoteId="@item.Id" class="btn btn-sm btn-success">
                                        Vincular Cliente / Calcular Entrega
                                    </a>

                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">Nenhum pacote cadastrado.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
