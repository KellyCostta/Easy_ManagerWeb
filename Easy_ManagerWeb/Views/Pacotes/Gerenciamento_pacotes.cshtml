@model IEnumerable<Easy_ManagerWeb.Models.Pacote>

@{
    ViewData["Title"] = "Gestão de Pacotes";
}

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Novo_pacote" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Novo Pacote
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Descrição</th>
                    <th>Tamanho</th>  
                    <th>Peso</th>
                    <th>Data de Inserção</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                            <td>@Html.DisplayFor(modelItem => item.Tamanho)</td>  
                            <td>@Html.DisplayFor(modelItem => item.Peso)</td>
                            <td>@item.DataCadastro.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">Nenhum pacote cadastrado.</td>  
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
