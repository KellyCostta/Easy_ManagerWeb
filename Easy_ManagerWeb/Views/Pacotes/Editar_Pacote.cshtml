@model Easy_ManagerWeb.Models.Pacote

@{
    ViewData["Title"] = "Editar Pacote/Item";
}

<div class="card shadow-sm">
    <div class="card-header bg-warning text-dark">
        <h4 class="mb-0">Editando Pacote: @Model.Tamanho</h4>
    </div>
    <div class="card-body">

        <form asp-action="Editar_Pacote" method="post">

            <input type="hidden" asp-for="Id" />


            <div class="form-group mb-3">
                <label asp-for="Tamanho" class="form-label">Tamanho</label>
                <select asp-for="Tamanho" class="form-control">
                    <option value="">Selecione...</option>
                    <option value="Pequeno">Pequeno</option>
                    <option value="Médio">Médio</option>
                    <option value="Grande">Grande</option>
                </select>
                <span asp-validation-for="Tamanho" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Peso" class="form-label">Peso (em gramas)</label>
                <input asp-for="Peso" class="form-control" placeholder="Ex: 500 (apenas o número em gramas)" required />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Gerenciamento_pacotes" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
                <button type="submit" class="btn btn-warning btn-lg">
                    <i class="bi bi-pencil-fill"></i> Salvar Alterações
                </button>
            </div>
        </form>
    </div>
</div>