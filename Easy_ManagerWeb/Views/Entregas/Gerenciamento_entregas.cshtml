@model IEnumerable<Easy_ManagerWeb.Models.Entrega>

@{
    ViewData["Title"] = "Gerenciamentos de Entregas";

    double totalVendas = 0;
    double totalCanceladas = 0;

    foreach (var e in Model)
    {
        if (e.Status == "Cancelada")
            totalCanceladas += e.Orcamento ?? 0;
        else
            totalVendas += e.Orcamento ?? 0;
    }

    double totalFinal = totalVendas - totalCanceladas;

}

<div class="d-flex justify-content-between align-items-center mb-4">
    <a asp-action="Nova_entrega" class="btn btn-outline-primary">Nova Entrega</a>

    <div>
        <a asp-action="Relatorio" asp-route-periodo="futuras" class="btn btn-outline-primary">Futuras</a>
        <a asp-action="Relatorio" asp-route-periodo="diario" class="btn btn-outline-primary">Diário</a>
        <a asp-action="Relatorio" asp-route-periodo="semanal" class="btn btn-outline-primary">Semanal</a>
        <a asp-action="Relatorio" asp-route-periodo="mensal" class="btn btn-outline-primary">Mensal</a>
        <a asp-action="Relatorio" asp-route-periodo="anual" class="btn btn-outline-primary">Anual</a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info text-center" role="alert">
                Nenhuma venda registrada neste período.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="bg-light">
                        <tr>
                        <tr>
                            <th>Cliente</th>
                            <th>Endereço</th>
                            <th>Data Agendada</th>
                            <th>Status</th>                        
                            <th>Valor</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var entrega in Model)
                        {
                            <tr onclick="window.location.href='@Url.Action("Resumo_Orcamento", "Entregas", new { id = entrega.Id })'" style="cursor:pointer;">
                                <td>@(entrega.Cliente?.Nome ?? "Sem Cliente")</td>
                                <td>@entrega.Endereco</td>
                                <td>@entrega.DataAgendada.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (entrega.Status == "Pendente")
                                    {
                                        <a asp-action="AlterarStatus"
                                           asp-route-id="@entrega.Id"
                                           class="btn btn-secondary btn-sm">
                                            Pendente
                                        </a>
                                    }
                                    else if (entrega.Status == "Cancelada")
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Cancelada
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check2-circle"></i> Entregue
                                        </span>
                                    }
                                </td>

                                <td>@(entrega.Orcamento.HasValue? entrega.Orcamento.Value.ToString("C") : "R$ 0,00")</td>
                                <td>
                                    <a asp-action="Editar_Entrega" asp-route-id="@entrega.Id" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil-fill"></i> Editar
                                    </a>

                                    <a asp-action="Excluir_Entrega" asp-route-id="@entrega.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash-fill"></i> Excluir
                                    </a>

                                    <a asp-action="CancelarEntrega"
                                       asp-route-id="@entrega.Id"
                                       class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-x-circle"></i> Cancelar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>


                <div class="mt-3 p-3 bg-light border rounded">
                    <div><strong>Total Entregas:</strong> @totalVendas.ToString("C")</div>
                    <div class="text-danger"><strong>Total Canceladas:</strong> - @totalCanceladas.ToString("C")</div>
                    <div><strong>Total Final:</strong> @totalFinal.ToString("C")</div>
                </div>

            </div>
        }
    </div>
</div>
