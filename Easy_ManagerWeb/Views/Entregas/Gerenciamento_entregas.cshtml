@model IEnumerable<Easy_ManagerWeb.Models.Entrega>

@{
    ViewData["Title"] = "Gestão de Entregas";
}

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Nova_entrega" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nova Entrega
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Cliente</th>
                    <th>Pacote</th>
                    <th>Status</th>
                    <th>Distância (km)</th>
                    <th>Tempo</th>
                    <th>Orçamento (R$)</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Cliente?.Nome</td>
                            <td>@item.Pacote?.Descricao</td>
                            <td>
                                <select class="form-select form-select-sm status-dropdown" data-id="@item.Id">
                                    @foreach (var status in new[] { "Pendente", "Entregue" })
                                    {
                                        <option value="@status" selected="@(status == item.Status ? "selected" : null)">@status</option>
                                    }
                                </select>
                            </td>

                            <td>@item.Distancia</td>
                            <td>@item.Tempo</td>
                            <td>
                                @if (item.Orcamento.HasValue)
                                {
                                    @item.Orcamento.Value.ToString("C2")
                                }
                                else
                                {
                                    <span class="text-muted">–</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">Nenhuma entrega cadastrada.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.status-dropdown').change(function () {
                var entregaId = $(this).data('id');
                var novoStatus = $(this).val();

                $.ajax({
                    url: '@Url.Action("AtualizarStatus", "Entregas")',
                    type: 'POST',
                    data: { id: entregaId, status: novoStatus },
                    success: function () {
                        console.log('Status atualizado com sucesso!');
                    },
                    error: function () {
                        alert('Erro ao atualizar o status!');
                    }
                });
            });
        });
    </script>
}
