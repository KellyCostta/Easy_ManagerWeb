@model IEnumerable<Easy_ManagerWeb.Models.Entrega>

@{
    ViewData["Title"] = "Gestão de Entregas";
}

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Nova_entrega" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nova Entrega
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Cliente</th>
                    <th>Pacote</th>
                    <th>Status</th>
                    <th>Distância (km)</th>
                    <th>Tempo</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Cliente?.Nome</td>
                            <td>@item.Pacote?.Descricao</td>
                            <td>@item.Status</td>
                            <td>@item.Distancia</td>
                            <td>@item.Tempo</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">Nenhuma entrega cadastrada.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
